# Application Settings
APP_NAME=Ultimate Marketing Team
APP_DESCRIPTION="Platform for managing marketing campaigns and content"
APP_VERSION=0.1.0
ENVIRONMENT=staging

# API Settings
API_PREFIX=/api/v1

# Database Settings
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/ultimatemarketing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_password_change_this
POSTGRES_DB=ultimatemarketing
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database Pool Settings
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=300
DB_STATEMENT_TIMEOUT=30000
DB_ENABLE_METRICS=true

# Redis Settings
REDIS_URL=redis://redis:6379/0

# RabbitMQ Settings
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE_PREFIX=umt_

# Security Settings - CHANGE THESE IN PRODUCTION!
JWT_SECRET=staging_secret_key_change_before_deployment
JWT_ALGORITHM=HS256
JWT_EXPIRY=604800  # 7 days in seconds
SESSION_EXPIRY=2592000  # 30 days in seconds

# Bitwarden Vault Integration
BITWARDEN_CLIENT_ID=
BITWARDEN_CLIENT_SECRET=
BITWARDEN_ORGANIZATION_ID=
BITWARDEN_API_URL=https://api.bitwarden.com/public
BITWARDEN_IDENTITY_URL=https://identity.bitwarden.com

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_SECURITY_MAX=20
RATE_LIMIT_SECURITY_WINDOW_MS=60000
RATE_LIMIT_PUBLIC_MAX=200
RATE_LIMIT_PUBLIC_WINDOW_MS=60000

# Circuit Breaker Settings
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60  # 1 minute

# Content Security
MAX_UPLOAD_SIZE_MB=10  # 10 MB
ALLOWED_UPLOAD_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf
MALWARE_SCAN_ENABLED=true

# CORS Settings
CORS_ORIGINS=https://staging.tangible-studios.com,https://staging-api.tangible-studios.com

# Frontend URL for OAuth redirects
FRONTEND_URL=https://staging.tangible-studios.com

# OAuth Settings - Add your OAuth provider credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Google Search Console API Settings
GOOGLE_OAUTH2_CLIENT_ID=
GOOGLE_OAUTH2_CLIENT_SECRET=
GOOGLE_OAUTH2_REDIRECT_URI=https://staging-api.tangible-studios.com/api/seo/oauth2callback
TOKEN_STORAGE_DIR=.tokens
SEO_CACHE_TTL=3600  # 1 hour
GSC_MAX_QUERIES_PER_DAY=2000
MIN_CONTENT_AGE_FOR_UPDATE=30  # days

MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common

OKTA_CLIENT_ID=
OKTA_CLIENT_SECRET=
OKTA_DOMAIN=

LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email Settings
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@tangible-studios.com
EMAILS_FROM_NAME=Ultimate Marketing Team

# File Storage Settings
UPLOADS_DIR=uploads

# Logging Settings
LOG_LEVEL=INFO

# AI Settings
ENABLE_MODEL_CACHING=true
MODEL_CACHE_TTL=3600
DEFAULT_CONTENT_MODEL=gpt-4-turbo
DEFAULT_STRATEGY_MODEL=claude-3-opus
OPENAI_DAILY_BUDGET_USD=50.0
ANTHROPIC_DAILY_BUDGET_USD=50.0
MAX_TOKENS_PER_REQUEST=8000
AI_RATE_LIMIT_TOKENS_PER_MINUTE=100000
AI_FALLBACK_TO_SMALLER_MODEL=true
AI_ENABLE_ADAPTIVE_RATE_LIMITING=true

# Performance Tracking
PERFORMANCE_TRACKING_ENABLED=true