# Core Configuration
NODE_ENV=development # or production, staging
PORT=3000
DEBUG=false
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ultimatemarketing
REDIS_URL=redis://localhost:6379

# Message Queue Configuration  
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE_PREFIX=umt_

# AI Service API Keys
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
COHERE_API_KEY=your-cohere-key
STABILITY_API_KEY=your-stability-key

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=86400
COOKIE_SECRET=your-cookie-secret

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Social Media API Configuration
FACEBOOK_API_VERSION=v18.0
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
LINKEDIN_API_VERSION=v2

# CMS Integration
WORDPRESS_API_URL=https://your-site.com/wp-json/wp/v2
WORDPRESS_USERNAME=your-wordpress-username
WORDPRESS_APPLICATION_PASSWORD=your-wordpress-app-password
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_API_VERSION=2023-10

# Advertising Platform Credentials
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_REFRESH_TOKEN=your-google-ads-refresh-token
FACEBOOK_ADS_ACCESS_TOKEN=your-facebook-ads-access-token

# Analytics Configuration
GOOGLE_ANALYTICS_MEASUREMENT_ID=G-XXXXXXXXXX
GOOGLE_ANALYTICS_API_SECRET=your-ga-api-secret

# Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=marketing@yourcompany.com

# Storage Configuration
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
CDN_URL=https://cdn.yourcompany.com

# Security
ENCRYPTION_KEY=your-encryption-key
ENCRYPTION_IV=your-encryption-iv
CORS_ORIGINS=http://localhost:3000,https://app.yourcompany.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_CUSTOM_BRANDING=true

# Service Endpoints (for microservices architecture)
AUTH_SERVICE_URL=http://auth-service:4000
CONTENT_SERVICE_URL=http://content-service:4001
ANALYTICS_SERVICE_URL=http://analytics-service:4002

# AI Model Configuration
DEFAULT_CONTENT_MODEL=gpt-4-turbo
DEFAULT_STRATEGY_MODEL=claude-3-opus
ENABLE_MODEL_CACHING=true
MODEL_CACHE_TTL=3600

# Monitoring & Performance
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
PERFORMANCE_TRACKING_ENABLED=true